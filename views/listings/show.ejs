<% layout("/layouts/boilerplate") %>

<div class="row offset-2 mt-5">
  <div class="card mb-3" style="max-width: 900px">
    <div class="row g-0">
      <div class="col-md-4 justify-content-center d-flex">
        <img src="<%= listing.image.url %>" class="img-fluid" alt="..." />
      </div>
      <div class="col-md-8">
        <div
          class="card-body showBody"
          style="max-height: 500px; overflow-y: auto"
        >
          <p class="card-text showText">
            <b><%= listing.title %></b>
          </p>
          <p class="card-text showText">Author: <%= listing.author %></p>
          <i
            >Page Created By: <%= listing.owner && listing.owner.username ?
            listing.owner.username : 'Unknown' %></i
          >
          <p class="card-text showText">
            Description: <%= listing.description %>
          </p>
          <p class="card-text showText">
            Publishing Year: <%= listing.publishing_year %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<% if(currUser && currUser._id.equals(listing.owner._id) ){ %>

<div class="showBtns">
  <a
    href="/listings/<%= listing._id %>/edit"
    class="btn btn-outline-dark offset-2 editBtn"
  >
    edit
  </a>

  <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
    <button class="delBtn offset-5">delete</button>
  </form>
</div>

<% } %>

<div class="col-8 offset-3 mb-3">
  <br />
  <br />
  <hr />
  <% if(currUser) { %>
  <h1>leave a review</h1>
  <form
    action="/listings/<%= listing._id %>/reviews"
    method="POST"
    novalidate
    class="needs-validation"
  >
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
      <fieldset class="starability-slot">
        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="review[rating]"
          value="0"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Good">5 stars</label>
        <input type="radio" id="first-rate6" name="review[rating]" value="6" />
        <label for="first-rate6" title="Pretty good">6 stars</label>
        <input type="radio" id="first-rate7" name="review[rating]" value="7" />
        <label for="first-rate7" title="Excellent">7 stars</label>
        <input type="radio" id="first-rate8" name="review[rating]" value="8" />
        <label for="first-rate8" title="Outstanding">8 stars</label>
        <input type="radio" id="first-rate9" name="review[rating]" value="9" />
        <label for="first-rate9" title="Superb">9 stars</label>
        <input
          type="radio"
          id="first-rate10"
          name="review[rating]"
          value="10"
        />
        <label for="first-rate10" title="Perfect">10 stars</label>
        <span class="starability-focus-ring"></span>
      </fieldset>
    </div>

    <div>
      <label for="comment" class="form-label">review</label>
      <textarea
        name="review[comment]"
        id="comment"
        cols="30"
        rows="5"
        class="form-control"
        required
      ></textarea>
      <div class="invalid-feedback">add some review</div>
      <br />
    </div>
    <button class="btn btn-outline-dark">Submit</button>
  </form>
  <% } %>
  <hr />
  <p><b>All reviews</b></p>
  <div class="row">
    <% for(let review of listing.reviews){ %>
    <div class="card-body col reviewBox mb-2 p-3 me-4">
      <div class="row">
        <div class="col-3">
          <h5 class="card-title"><i>@<%= review.author.username %></i></h5>
        </div>
        <div class="col-6 offset-3">
          <p class="card-text" style="font-size: 0.9rem">
            <%= new Date(review.createdAt).toLocaleDateString() %> <%= new
            Date(review.createdAt).toLocaleTimeString() %>
          </p>
        </div>
      </div>

      <p
        class="starability-result"
        data-rating="<%= review.rating %>"
        style="font-size: 1.5rem"
      >
        Rated: <%= review.rating %> stars
      </p>

      <p class="card-text"><%= review.comment %></p>

      <form
        class="mb-3"
        method="POST"
        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
      >
        <button class="delBtn">Delete</button>
      </form>
    </div>
    <% } %>
  </div>
</div>
